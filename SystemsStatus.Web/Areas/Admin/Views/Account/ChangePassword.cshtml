@using SystemsStatus.Core.Data.Entities
@using SystemsStatus.Web.Extensions
@using SystemsStatus.Web.Areas.Admin.ViewModels
@model AccountChangePasswordViewModel

@{
    ViewBag.Title = "Change Password - Systems Status Admin - SUNY Cortland";
    Layout = "~/Areas/Admin/Views/Shared/_MasterLayout.cshtml";
    ViewBag.DashboardMenuActive = "Account";
    ViewBag.DashboardSubMenuActive = "Change Password";
}

<ol class="breadcrumb" style="margin-top: 10px;">
    <li>
        <a href="@Url.Action("Index", new { controller = "Home" })">Home</a>
    </li>
    <li>
        <a href="@Url.Action("Index", new { controller = "Account" })">Account</a>
    </li>
    <li class="active">Change Password</li>
</ol>
<h1>Change Password</h1>
<p>
    Make any changes to your password and click 'Change Password'.
</p>
@using (Html.BeginForm())
{
<div class="row">
    <div class="col-lg-6">
        <fieldset>
            <legend>Password Details</legend>
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelForRequired(x => x.CurrentPassword, new { @class = "col-lg-3" })
                    <div class="col-lg-9">
                        @Html.PasswordFor(x => x.CurrentPassword, new { @class = "form-control", placeholder = "Enter your current password", autocomplete = "off" })
                        @Html.ValidationMessageFor(x => x.CurrentPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelForRequired(x => x.NewPassword, new { @class = "col-lg-3" })
                    <div class="col-lg-9">
                        @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control", placeholder = "Enter a new password", autocomplete = "off" })
                        @Html.ValidationMessageFor(x => x.NewPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelForRequired(x => x.NewPasswordRepeat, new { @class = "col-lg-3" })
                    <div class="col-lg-9">
                        @Html.PasswordFor(x => x.NewPasswordRepeat, new { @class = "form-control", placeholder = "Enter repeated password", autocomplete = "off" })
                        @Html.ValidationMessageFor(x => x.NewPasswordRepeat)
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="col-lg-6">
    
    </div>
</div>
<center>
    <span class="required">*</span> indicates a required field
</center>
<hr />
<div class="row" style="margin-top: 20px;">
    <div class="col-lg-12">
        <div class="well well-sm" style="overflow: auto;">
            <input type="button" class="btn btn-default pull-left" onclick="window.history.back()" value="Cancel" />
            <input type="submit" class="btn btn-success pull-right" value="Change Password" />
        </div>
    </div>
</div>
}
@if (ViewBag.Saved != null)
{
<div id="modalSaved" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 id="modalTitle" class="modal-title">Saved</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-success">
                    <h4>Success!</h4>
                    <p>
                        Your password has been successfully updated.
                    </p>
                </div>
            </div>
            <div id="modalFooter" class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
}
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            @if (ViewBag.Saved != null)
            {
            <text>
            $("#modalSaved").modal("show");
            </text>
            }
        });
    </script>
}