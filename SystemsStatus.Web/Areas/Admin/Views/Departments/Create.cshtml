@using SystemsStatus.Core.Data.Entities
@using SystemsStatus.Web.Areas.Admin.ViewModels
@using SystemsStatus.Web.Extensions
@model DepartmentsCreateViewModel

@{
    ViewBag.Title = "Create Department - Systems Status - SUNY Cortland";
    Layout = "~/Areas/Admin/Views/Shared/_MasterLayout.cshtml";
    ViewBag.DashboardMenuActive = "Departments";
    ViewBag.DashboardSubMenuActive = "Create Department";
}

<ol class="breadcrumb" style="margin-top: 10px;">
    <li>
        <a href="@Url.Action("Index", new { controller = "Home" })">Home</a>
    </li>
    <li>
        <a href="@Url.RouteUrl("Admin_Departments_FirstPage")">Departments</a>
    </li>
    <li class="active">Create Department</li>
</ol>
<h1>Create a Department</h1>
<p>
    Complete the following form and click 'Create' to save your department.
</p>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <fieldset>
                <legend>
                    Department Details
                </legend>
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelForRequired(x => x.Department.Name, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(x => x.Department.Name, new { @class = "form-control", placeholder = "Enter a department name", autocomplete = "off" })
                            @Html.ValidationMessageFor(x => x.Department.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelForRequired(x => x.Department.Code, new { @class = "col-lg-3" })
                        <div class="col-lg-2">
                            @Html.TextBoxFor(x => x.Department.Code, new { @class = "form-control", placeholder = "Code", autocomplete = "off" })
                        </div>
                        @Html.ValidationMessageFor(x => x.Department.Code)
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
    <center>
        <span class="required">*</span> indicates a required field
    </center>
    <hr />
    <div class="row" style="margin-top: 20px;">
        <div class="col-lg-12">
            <div class="well well-sm" style="overflow: auto;">
                <input type="button" class="btn btn-default pull-left" onclick="window.history.back()" value="Cancel" />
                <input type="submit" class="btn btn-success pull-right" value="Create" />
            </div>
        </div>
    </div>
}