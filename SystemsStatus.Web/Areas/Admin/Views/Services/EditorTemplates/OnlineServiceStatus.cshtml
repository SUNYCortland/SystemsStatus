@using SystemsStatus.Core.Data.Entities.Statuses
@using SystemsStatus.Web.Extensions
@model OnlineServiceStatus

@Html.HiddenFor(x => x.Id)
<div class="form-group">
    @Html.LabelForRequired(x => x.Name, new { @class = "col-lg-3" })
    <div class="col-lg-9">
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter a status name", autocomplete = "off" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
</div>
<div class="form-group">
    @Html.LabelForRequired(x => x.OnlineSince, new { @class = "col-lg-3" })
    <div class="col-lg-9">
        @Html.TextBoxFor(x => x.OnlineSince, "{0:MM/dd/yyyy hh:mm tt}", new { @class = "form-control datepicker", placeholder = "Enter an online date", autocomplete = "off" })
        @Html.ValidationMessageFor(x => x.OnlineSince)
    </div>
</div>